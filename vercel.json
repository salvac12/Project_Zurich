{
  "version": 2,
  "name": "project-zurich",
  "public": true,
  "buildCommand": "echo 'Static site - no build needed'",
  "outputDirectory": ".",
  "builds": [
    {
      "src": "./**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/index-investment-hub.html"
    },
    {
      "src": "/(.+)",
      "dest": "/$1"
    }
  ],
  "rewrites": [
    { "source": "/api/visitors", "destination": "/api/index" },
    { "source": "/api/analytics-events", "destination": "/api/index" },
    { "source": "/api/analytics-real", "destination": "/api/index" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
